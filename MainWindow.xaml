<Window x:Class="GBASelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GBASelector"
        mc:Ignorable="d"
        Title="MainWindow" Height="860" Width="1040" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown" ResizeMode="NoResize" Background="#222E50">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Button x:Name="btnClose" Content="X" Width="35" Height="35" HorizontalAlignment="Right"
                BorderBrush="Transparent" Background="#222E50"
                VerticalAlignment="Top" Click="btnClose_Click" MouseEnter="btnClose_MouseEnter" MouseLeave="btnClose_MouseLeave" Panel.ZIndex="10"/>
        <TabControl Name="tC">
            <TabItem Header=" + Add Item" MouseDown="TabItem_MouseDown">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition>
                            
                        </RowDefinition>
                        <RowDefinition>

                        </RowDefinition>
                        <RowDefinition>

                        </RowDefinition>
                        <RowDefinition>

                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        
                    </Grid.ColumnDefinitions>
                    <Button Name="btnAddPlatform" Content="Add Platform" Height="40" Width="120" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                        Margin="40" Grid.Row="3" Click="btnAddPlatform_Click"/>
                    <Label Content="Enter desired platform name:" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70" FontSize="20"/>
                    <TextBox Name="txtPlatform" Width="300" Height="40" VerticalAlignment="Bottom" Margin="70" Grid.Row="0"/>
                    
                    <Label Content="Enter path to emulator exe:" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70" FontSize="20"/>
                    <TextBox Name="txtEmu" Width="300" Height="40" VerticalAlignment="Bottom" Margin="70" Grid.Row="1"/>

                    <Label Content="Enter rom file extension:" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70" FontSize="20"/>
                    <TextBox Name="txtExtension" Width="300" Height="40" VerticalAlignment="Bottom" Margin="70" Grid.Row="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
